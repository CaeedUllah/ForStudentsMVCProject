@model IEnumerable<Employees>

<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs d-flex align-items-center" style="background-image: url('assets/img/breadcrumbs-bg.jpg');">
    <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

        <h2>Employee List</h2>
        <ol>
            <li><a class="readmore stretched-link" asp-controller="Home" asp-action="Index">Home</a></li>
            <li>Employee</li>
        </ol>

    </div>
</div><!-- End Breadcrumbs -->

<h2 style="text-align:center; padding-top:10px;">List Of Employees</h2>
<hr />
<div class="text-center" style="margin-bottom: 20px;">
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Full Name</th>
            <th scope="col">Address</th>
            <th scope="col">Designation</th>
            <th scope="col">Contact</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmpName</td>
                <td>@employee.EmpAddress</td>
                <td>@employee.EmpDesignation</td>
                <td>@employee.EmpContact</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" title="Edit" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" title="Delete" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
